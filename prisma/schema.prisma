generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SlangTerm {
  id         String         @id @default(cuid())
  phrase     String
  meaning    String
  example    String?
  createdAt  DateTime       @default(now())
  quizQuestions QuizQuestion[]
}

model QuizQuestion {
  id          String        @id @default(cuid())
  slangId     String?
  question    String
  explanation String?
  createdAt   DateTime      @default(now())
  slang       SlangTerm?    @relation(fields: [slangId], references: [id], onDelete: SetNull)
  choices     QuizChoice[]
}

model QuizChoice {
  id         String       @id @default(cuid())
  questionId String
  text       String
  isCorrect  Boolean      @default(false)
  question   QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}
